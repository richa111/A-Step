<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.ajay.a_step.New_pass_frag">


    <EditText
        android:id="@+id/editxtpassnewpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editxtcopassnewpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editxtpassnewpass"
        android:layout_below="@+id/editxtpassnewpass"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="confrm_pass"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnnewpassdone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editxtcopassnewpass"
        android:layout_marginTop="84dp"
        android:text="Done" />

    <TextView
        android:id="@+id/textViewemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />
</RelativeLayout>
