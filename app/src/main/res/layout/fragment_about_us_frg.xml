
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/layout2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/logo"
                />

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/carda"
            android:layout_below="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="6dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Corruption is the misuse of public power (by elected politician or appointed civil servant) for private gain.
" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardb"
            android:layout_below="@id/carda"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="6dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"

            android:text="In order to ensure that not only public corruption but also private corruption between individuals and businesses could be covered by the same simple definition." />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/carde"
            android:layout_below="@id/cardb"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="6dp">


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Corruption is the misuse of entrusted power (by heritage, education, marriage, election, appointment or whatever else) for private gain. "/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardf"
            android:layout_below="@id/carde"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="6dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="So to solve all the problems related to corruption and fights increasing day by day, we have created a simple app to help the people who is in need of help." />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cardg"
            android:layout_below="@id/cardf"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="6dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="In the A-Step app we have tried to help people by providing different services , where they can easily get the help by making complain or by contacting them." />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardh"
            android:layout_below="@id/cardg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="People can also send pictures and videos through the mobile application and the vigilance officials will check the complaints through the mobile app and take necessary action." />
</android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>


