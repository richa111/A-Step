<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:background="#6a81b724"
    tools:context="com.example.ajay.a_step.Login_frag">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent"
        android:id="@+id/textInputLayout"
        android:layout_marginTop="150dp">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/editxtpasslogin"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignStart="@+id/editxtusernmlogin"
            android:layout_below="@+id/editxtusernmlogin"
            android:layout_gravity="center"
            android:layout_marginTop="51dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btndone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="done"
        android:text="Done"
        android:layout_below="@+id/textInputLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/btnforgpasslogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="forgat_Pass"
        android:text="Foragtpassword"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/btndone"
        android:layout_alignParentStart="true" />



    <EditText
        android:id="@+id/editxtusernmlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="user_name"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
