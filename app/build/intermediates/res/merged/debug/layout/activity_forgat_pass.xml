<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forgfram"
    tools:context="com.example.ajay.a_step.Forgat_pass">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editxtforgemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="112dp"
            android:ems="10"
            android:hint="email_id"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnfogemailok"
            android:layout_width="160dp"
            android:layout_marginStart="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/editxtforgemail"
            android:onClick="email_ok"
            android:layout_marginTop="103dp"
            android:text="ok"
            android:textSize="15dp"
            android:textAllCaps="true"/>
    </RelativeLayout>

</ScrollView>

</android.support.v4.widget.DrawerLayout>
