<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajay.a_step.Account_frg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        android:layout_alignParentEnd="true"
        tools:ignore="ObsoleteLayoutParam">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/accountname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="User_Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/accountemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/accountname"
                android:layout_below="@+id/accountname"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="email_id"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/accountmob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/accountemail"
                android:layout_below="@+id/accountemail"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="mobile_no"
                android:inputType="phone" />

            <EditText
                android:id="@+id/accountaddres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/accountmob"
                android:layout_below="@+id/accountmob"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/accountpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/accountaddres"
                android:layout_below="@+id/accountaddres"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:hint="password" />

            <Button
                android:id="@+id/accountedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accountpass"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp"
                android:text="Edit Account Details" />

            <TextView
                android:id="@+id/accid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/accountedit"
                android:layout_alignEnd="@+id/accountedit"
                android:layout_marginBottom="11dp"
                android:layout_marginEnd="26dp"
                android:visibility="invisible" />


        </RelativeLayout>

    </ScrollView>
</LinearLayout>
